---
interface Props {
  platform: 'wechat' | 'xiaohongshu';
  label?: string;
}

const { platform, label } = Astro.props;
---

<button class="flex flex-col items-center group cursor-pointer" data-platform={platform}>
  <div class="size-8 bg-gray-700 text-white rounded-full flex items-center justify-center text-sm group-hover:bg-gray-600 transition-colors">
    {platform === 'wechat' && (
      <svg xmlns="http://www.w3.org/2000/svg" class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
    )}
    {platform === 'xiaohongshu' && (
      <svg xmlns="http://www.w3.org/2000/svg" class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    )}
  </div>
  {label && <span class="text-xs text-gray-500 group-hover:text-gray-700 transition-colors">{label}</span>}
</button>
