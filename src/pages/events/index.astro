---
import { getCollection } from 'astro:content';

import DefaultLayout from '#/layouts/default';

import EventPage from './EventPage';

const meta = {
  title: '银湖创联的社区活动',
};

const events = await getCollection('events');
// 转换为 EventPage 组件需要的格式
const eventData = events.map(event => event.data);
---

<DefaultLayout meta={meta}>
  <div class="py-16 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">社区活动</h1>
        <p class="text-xl text-gray-600">银湖创联的社区活动</p>
      </div>
      <div class="max-w-screen-xl mx-auto">
        <EventPage events={eventData} client:only="react" />
      </div>
    </div>
  </div>
</DefaultLayout>
